<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:layout_weight="0"
            android:id="@+id/button_login_email"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edittext_login_email"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login via FingerPrint"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_login_fingerprint"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login via Voice-DNA"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_login_voicedna"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login via Magic-Link"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_login_magiclink"/>

</LinearLayout>